@model AmazonMVC.Models.Cart
@{
    ViewData["Title"] = "Update product";
    Layout = "_pastLoginLayout";
}

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CartId" />
         
            <div class="form-group">
                <label asp-for="ProductQuantity" class="control-label"></label>
                <input asp-for="ProductQuantity" class="form-control" />
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
           <br />
            <div class="form-group">
                <input type="submit" value="save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


