@model IEnumerable<AmazonMVC.Models.Product>

@{
    ViewData["Title"] = "SearchResult";
    ViewData["ShoppingSession"] = false;
    ViewData["SearchResult"] = true;
    ViewData["MerchantView"] = false;
}

<h1>SearchResult</h1>

<partial name="_ProductPartial" Models="Product" view-data="ViewData"></partial >
@if (Model.Count() == 0)
{      
     <div class="form-group" >
          
          <h4  style="text-align:center">   No result Found</h4> 
         
     </div>
}
else{
     <div>
           <a class="button" asp-area="" asp-controller="Customer"asp-action="CustomerLogin" >login to buy</a>
     </div>
}

